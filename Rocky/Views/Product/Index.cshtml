@using Rocky_Utilitu
@model IEnumerable<Rocky.Models.Product>



<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Список продуктов</h2>
        </div>
        <div class="col-6">
            <a asp-action="Upsert" class="btn btn-primary">
                Добавить новый продукт
            </a>
        </div>
    </div>

    <br? /> <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Имя продукта
                    </th>
                    <th>
                        Описание
                    </th>
                    <th>
                        Категория
                    </th>
                    <th>
                        Цена
                    </th>
                    <th>
                        Картинка
                    </th>
                    <th></th>
                </tr>

            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td width="40%">
                            @item.Description
                        </td>
                        <td width="40%">
                            @item.Category.Name
                        </td>
                        <td width="20%">
                            @item.Price
                        </td>
                        <td width="20%">
                            @if(item.Imge == null)
                            {
                                <img src="@WC.NoImage" class="img-thumbnail" alt="lorem">
                            }
                            else
                            {
                                <img src="@WC.ImgPath\@item.Imge" class="img-thumbnail" alt="lorem">
                            }
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a  asp-route-Id="@item.Id" asp-action="Upsert" class="btn btn-primary mx-2">Edit</a>
                                <a  asp-route-Id="@item.Id" asp-action="Del" class="btn btn-danger mx-2">Del</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

</div>

