@model IEnumerable<Rocky.Models.Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Список категорий</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                Создать новую категорию
            </a>
        </div>
    </div>
    
    <br? /> <br />

    @if(Model.Count()>0)
    {
            <table class="table table-bordered table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>
                            Имя категории
                        </th>
                        <th>
                            Номер
                        </th>
                        <th></th>
                    </tr>

                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td width="20%">
                            @item.DispalyOrder
                        </td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit" class="btn btn-primary mx-2">Edit</a>
                                <a asp-controller="Category" asp-route-Id="@item.Id" asp-action="Del" class="btn btn-danger mx-2">Del</a>
                            </div>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
    }

</div>

     